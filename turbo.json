{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/*", "package.json", "Cargo.toml"],
      "outputs": ["pkg/*", "dist/*", "target/*"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build", "build"],
      "inputs": ["src/*", "package.json", "Cargo.toml"]
    },
    "//#fmt": {
      "cache": false
    }
  }
}
